For install globally configuration (common):

sudo apt-get update && sudo apt-get upgrade -y
sudo apt-get install zip make gcc libc6-dev tcl -y
sudo apt-get install build-essential zlib1g-dev checkinstall -y

sudo apt-get install libreadline-gplv2-dev libncursesw5-dev libssl-dev libsqlite3-dev tk-dev libgdbm-dev libc6-dev libbz2-dev -y

For install oracle jdk /openjdk:
sudo add-apt-repository ppa:openjdk-r/ppa
sudo apt-get update && sudo apt-get upgrade -y
sudo apt-get install openjdk-8-jdk -y

sudo update-alternatives --config java
java -version

For install angular-cli + NodeJS + npm :
sudo apt-get install build-essential nodejs npm -y
sudo npm install -g @angular/cli
sudo npm install -g n
sudo n latest

For install Gradle:
cd /opt/soft
sudo wget https://services.gradle.org/distributions/gradle-4.10.2-bin.zip
sudo apt-get install unzip -y
sudo unzip gradle-*

For install Git (core/base) :
sudo apt-get install git-core
git --version

git config --global user.name "Your name"
git config --global user.email "Your mail address"

For install python :
wget https://www.python.org/ftp/python/3.6.3/Python-3.6.3.tgz
tar -xvf Python-3.6.3.tgz
cd Python-3.6.3
./configure
make
sudo make install
python3.6 -V

sudo update-alternatives --config python3

sudo apt-get install python3-pip -y
pip3 --version


//cd /opt/soft/

//to install module of python
sudo vi requirements.txt
gspread==3.1.0
oauth2client==4.1.3
PyFunctional==1.1.3
PyYAML==3.13
redis==3.0.1
requests==2.20.1
